{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "declarationDir": "types"
    },
    "ts-node": {
        "compilerOptions": {
            "target": "esnext",
            "module": "commonjs"
        }
    }
}
